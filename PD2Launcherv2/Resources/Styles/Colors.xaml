                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PD2Launcherv2.Controls">

    <Color x:Key="Gold">#FF998363</Color>
    <Color x:Key="GoldLighter">#FFb39a74</Color>
    <Color x:Key="GoldDarker">#FF877458</Color>
    <SolidColorBrush x:Key="GoldBrush" Color="{StaticResource Gold}"/>
    <SolidColorBrush x:Key="GoldLighterBrush" Color="{StaticResource GoldLighter}"/>
    <SolidColorBrush x:Key="GoldDarkerBrush" Color="{StaticResource GoldDarker}"/>
    <Color x:Key="GOLD">#998363</Color>
    <Color x:Key="GOLD_LIGHTER">#b39a74</Color>
    <Color x:Key="GOLD_DARKER">#877458</Color>
    <Color x:Key="SHAKO">#007759</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="SUPER_GRAY">#141414</Color>
    <Color x:Key="DISABLED">#56585c</Color>
    <Color x:Key="Primary">#007759</Color>
    <Color x:Key="Secondary">Black</Color>
    <Color x:Key="Tertiary">#007759</Color>
    <Color x:Key="White">#b39a74</Color>
    <Color x:Key="Gray100">#998363</Color>
    <Color x:Key="Gray200">#998363</Color>
    <Color x:Key="Gray300">#998363</Color>
    <Color x:Key="Gray400">#007759</Color>
    <Color x:Key="Gray500">#007759</Color>
    <Color x:Key="Gray600">#007759</Color>
    <Color x:Key="Gray900">#007759</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- Grayscale Definitions -->
    <Color x:Key="GrayScale01">#FFFFFF</Color>
    <Color x:Key="GrayScale02">#F2F2F2</Color>
    <Color x:Key="GrayScale03">#E6E6E6</Color>
    <Color x:Key="GrayScale04">#D9D9D9</Color>
    <Color x:Key="GrayScale05">#CCCCCC</Color>
    <Color x:Key="GrayScale06">#BFBFBF</Color>
    <Color x:Key="GrayScale07">#B3B3B3</Color>
    <Color x:Key="GrayScale08">#A9A9A9</Color>
    <Color x:Key="GrayScale09">#999999</Color>
    <Color x:Key="GrayScale10">#8C8C8C</Color>
    <Color x:Key="GrayScale11">#808080</Color>
    <Color x:Key="GrayScale12">#737373</Color>
    <Color x:Key="GrayScale13">#666666</Color>
    <Color x:Key="GrayScale14">#595959</Color>
    <Color x:Key="GrayScale15">#4D4D4D</Color>
    <Color x:Key="GrayScale16">#404040</Color>
    <Color x:Key="GrayScale17">#333333</Color>
    <Color x:Key="GrayScale18">#262626</Color>
    <Color x:Key="GrayScale19">#1A1A1A</Color>
    <Color x:Key="GrayScale20">#0D0D0D</Color>
    <Color x:Key="GrayScale21">#0A0A0A</Color>
    <Color x:Key="GrayScale22">#080808</Color>
    <Color x:Key="GrayScale23">#050505</Color>
    <Color x:Key="GrayScale24">#020202</Color>
    <Color x:Key="GrayScale25">#000000</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource SHAKO}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource GOLD_DARKER}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource GOLD}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource GrayScale01}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource GrayScale25}"/>
    <SolidColorBrush x:Key="SoftWhite" Color="{StaticResource GrayScale08}"/>
    <SolidColorBrush x:Key="LightGray" Color="{StaticResource GrayScale11}"/>
    <SolidColorBrush x:Key="MediumGray" Color="{StaticResource GrayScale13}"/>
    <SolidColorBrush x:Key="DarkGray" Color="{StaticResource GrayScale20}"/>

    <Color x:Key="Yellow100Accent">#F7B548</Color>
    <Color x:Key="Yellow200Accent">#FFD590</Color>
    <Color x:Key="Yellow300Accent">#FFE5B9</Color>
    <Color x:Key="Cyan100Accent">#28C2D1</Color>
    <Color x:Key="Cyan200Accent">#7BDDEF</Color>
    <Color x:Key="Cyan300Accent">#C3F2F4</Color>
    <Color x:Key="Blue100Accent">#3E8EED</Color>
    <Color x:Key="Blue200Accent">#72ACF1</Color>
    <Color x:Key="Blue300Accent">#A7CBF6</Color>

    <Style x:Key="GameButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <!-- Remove the border -->
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>

        <!-- Custom template to remove highlight effect -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!-- Remove the default MouseOver effect -->
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="Transparent"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>